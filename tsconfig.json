{
	"extends": "@signageos/codestyle/tsconfig-strict.json",
	"compilerOptions": {
		"target": "es6",
		"declaration": true,
		"noUncheckedIndexedAccess": false,
		"strictPropertyInitialization": false,
		"lib": ["DOM"],
		"checkJs": false,
		"outDir": "dist",
		"moduleResolution": "NodeNext"
	},
	"include": ["src/**/*.ts", "tests/**/*.ts"],
	"ts-node": {
		"swc": true
	}
}
