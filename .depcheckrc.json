{
	"specials": ["mocha"],
	"parsers": {
		"**/*.ts": "typescript",
		"**/*.js": "es6"
	},
	"detectors": ["importDeclaration", "requireCallExpression"],
	"ignore-dirs": ["dist"],
	"ignores": [
		"@types/*",
		"@signageos/codestyle",
		"@swc/core",
		"ts-node",
		"source-map-support",
		"mocha",
		"depcheck",
		"typedoc",
		"typedoc-plugin-missing-exports",
		"typedoc-plugin-rename-defaults",
		"prettier",
		"typescript",
		"tslint",
		"@istanbuljs/nyc-config-typescript",
		"c8"
	]
}
