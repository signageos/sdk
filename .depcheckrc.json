{
	"specials": [ "mocha" ],
	"parsers": {
		"**/*.ts": "typescript",
		"**/*.js": "es6"
	},
	"detectors": [
		"importDeclaration",
		"requireCallExpression"
	],
	"ignore-dirs": [
		"dist"
	],
	"ignores": [
		"@types/*",
		"@signageos/codestyle",
		"ts-node",
		"source-map-support",
		"mocha",
		"depcheck",
		"typedoc",
		"typedoc-plugin-missing-exports",
		"typedoc-plugin-rename-defaults",
		"prettier",
		"typescript",
		"tslint"
	]
}
